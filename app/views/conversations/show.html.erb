<%= render 'conversation_header', user: @conversation.recipient %>
<div class="container mt-5">
  <% if @conversation.messages? %>
    <% @conversation.messages.each do |message| %>
      <%= render  'messages/message', message: message %>
    <% end %>
  <% end %>
</div>
<%= render 'conversations/add_one_message' %>
<%= render 'messages/message_form',message: @message, conversation: @conversation %>


