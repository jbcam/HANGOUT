<div class="card-index" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('#');">
  <%= image_tag event.category.picto, class: "picto-small card-picto-event" %>
  <%#= render 'shared/attendee_avatar', attendees: Event.last.attendees %>
  <div class="card-description">
    <h2><%= event.name %></h2>
    <p><%= event.address %> </p>
    <p><%= event.starts_at %> </p>
  </div>
  <div class="distance"> 2 km </div>
</div>
