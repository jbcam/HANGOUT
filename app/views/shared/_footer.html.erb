        <span class='badge-notification'><%= current_user.unread_messages %></span>
      <% else %>
        <span class='badge-notification d-none'><%= current_user.unread_messages %></span>
      <% end %>
    </div>
      <%#= link_to "<div class='bagde-container fas fa-comments'><span class='badge-notification'>#{count_all_unread_messages(current_user)}</span></div>".html_safe, conversations_path %>
