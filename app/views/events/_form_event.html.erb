<div class="container">
  <div class="form--event">
  <%= simple_form_for @event do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :category_id, as: :select, collection: Category.all.map { |r| [r.name.capitalize, r.id] }, include_blank: true %>
    <%= f.input :link %>
    <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.submit "Create your event", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>

