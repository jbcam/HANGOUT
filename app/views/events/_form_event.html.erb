<div class="container">
  <div class="form--event">
  <%= simple_form_for @event do |f| %>
    <%= f.input :name, placeholder: "What's the name ?", label: false %>
    <%= f.input :description, input_html: { maxlength: 200 }, placeholder: "Write your description", label: false %>
    <%= f.input :address, input_html: {id:'city_form', class: "autocomplete"}, placeholder: "What's the address ?", label: false, as: :string %>
    <%= f.input :category_id, as: :select, collection: Category.all.map { |r| [r.name.capitalize, r.id] }, include_blank: true, as: :radio_buttons %>
    <%= f.input :link, placeholder: "url", label: false %>
    <div class="row">
      <div class="col">
        <%= f.input :starts_at, as: :string, required: false, input_html: { class: "datepicker"}, label: false, placeholder: "Pick your date" %>
      </div>
      <!-- <div class="col">
        <%#= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      </div> -->
    </div>
    <%= f.submit "Create your event", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>

